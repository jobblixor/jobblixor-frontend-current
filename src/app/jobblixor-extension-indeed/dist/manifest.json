{
  "manifest_version": 3,
  "name": "Jobblixor Indeed Auto-Apply",
  "version": "2.0.0",
  "description": "Automate job applications on Indeed.com with Jobblixor.",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab", 
    "tabs"
  ],
  "host_permissions": [
    "https://www.indeed.com/*",
    "https://smartapply.indeed.com/*",
    "https://us.smartapply.indeed.com/*",
    "https://firebasestorage.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.indeed.com/*",
        "https://smartapply.indeed.com/*",
        "https://us.smartapply.indeed.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon16.png",
        "icons/icon32.png", 
        "icons/icon48.png",
        "icons/icon128.png"
      ],
      "matches": [
        "https://www.indeed.com/*",
        "https://smartapply.indeed.com/*",
        "https://us.smartapply.indeed.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}